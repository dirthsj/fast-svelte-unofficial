{
    "compilerOptions": {
        "declaration": true,
        "outDir": "./dist",
        "moduleResolution": "node",
        "module": "es2020",
        "target": "es2020",
        "lib": ["es2021"],
        "baseUrl": "./",
        "jsx": "react",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "allowJs": true
    },
    "include": ["src/**/*"],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "**/*.spec.tsx",
        "**/__tests__/**"
    ]
}